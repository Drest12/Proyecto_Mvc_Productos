    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codprod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomprod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechareg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.suspendido)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditProducto", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Detalles", "DetailsProducto", new { id = item.codprod }) |
            @Html.ActionLink("Eliminar", "DeleteProducto", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
