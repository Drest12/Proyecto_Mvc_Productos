<p>
    @Html.ActionLink("Nuevo Producto", "CreateProducto")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codprod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomprod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
